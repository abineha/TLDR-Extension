{
  "manifest_version": 3,
  "name": "TLDR Chan - Text Summarizer",
  "version": "1.0",
  "description": "Summarizes highlighted text using AI and displays it in bullet points",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api-inference.huggingface.co/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TLDR Chan"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 